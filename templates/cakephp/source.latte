{layout '@layout.latte'}
{var $robots = false}

{block #title}File {$fileName}{/block}

{block #content}
{var $lineRegex = '~<span class="line">(\\s*(\\d+):\\s*)</span>([^\\n]*(?:\\n|$))~'}
<pre><code>{$source|replaceRE:$lineRegex,'<span id="$2" class="codeline"><a class="number" href="#$2">$1</a>$3</span>'|noescape}</code></pre>
{/block}
